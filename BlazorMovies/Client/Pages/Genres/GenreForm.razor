
<EditForm Model="Genre" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator />
    <div class="form-group">
        <InputText class="form-control" @bind-Value="@Genre.Name"></InputText>
        <ValidationMessage For="@(()=> Genre.Name)"></ValidationMessage>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save New Genre</button>
    </div>


</EditForm>


@code {

    [Parameter]
    public Genre Genre { get; set; }

    [Parameter]
    public EventCallback OnValidSubmit { get; set; }

}
