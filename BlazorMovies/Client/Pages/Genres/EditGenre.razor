@page "/genre/edit/{GenreId:int}"

<h3>Edit Genre</h3>

@if (genre != null)
{

    <GenreForm Genre="genre" OnValidSubmit="Edit" />

}




@code {

    [Parameter]
    public int GenreId { get; set; }
    public Genre genre;

    protected override void OnInitialized()
    {
        genre = new Genre() { Id = GenreId, Name = "Comedy" };
    }

    private void Edit()
    {
        Console.WriteLine(genre.Name + "has been edited using a razor component.");
    }

}
